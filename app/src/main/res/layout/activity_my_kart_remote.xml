<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyKartRemote">

    <Switch
        android:id="@+id/swi_accelero_on_offID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:text="acceleromètre"
        app:layout_constraintEnd_toStartOf="@+id/swi_uSonicID"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/positionLightButtonID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="#E1E1E1E1"
        android:text="Position"
        app:layout_constraintBaseline_toBaselineOf="@+id/chassisLightButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/chassisLightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#E1E1E1E1"
        android:text="Châssis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/positionLightButtonID" />

    <SeekBar
        android:id="@+id/directionBarID"
        android:layout_width="382dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="168dp"
        android:max="560"
        android:pointerIcon="context_menu"
        android:progress="280"
        android:thumb="@android:drawable/btn_radio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parameterButtonID"
        app:layout_goneMarginLeft="100dp" />

    <SeekBar
        android:id="@+id/gasBarID"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginEnd="4dp"
        android:max="31"
        android:orientation="vertical"
        android:progress="15"
        android:rotation="-90"
        android:thumb="@android:drawable/btn_radio"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.474" />

    <ImageButton
        android:id="@+id/parameterButtonID"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_settings" />

    <TextView
        android:id="@+id/powerLevelTextID"
        android:layout_width="159dp"
        android:layout_height="36dp"
        android:layout_marginStart="372dp"
        android:layout_marginTop="108dp"
        android:text="Power: 0 %"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/chassisLightButton"
        app:layout_constraintTop_toBottomOf="@+id/gasBarID" />

    <TextView
        android:id="@+id/powerLevelTextID2"
        android:layout_width="160dp"
        android:layout_height="37dp"
        android:layout_marginStart="372dp"
        android:layout_marginTop="136dp"
        android:text="Speed: 0"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/chassisLightButton"
        app:layout_constraintTop_toBottomOf="@+id/gasBarID" />

    <TextView
        android:id="@+id/angleTextID"
        android:layout_width="189dp"
        android:layout_height="36dp"
        android:text="Angle : 0°"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/swID"
        android:layout_width="265dp"
        android:layout_height="251dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/parameterButtonID"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <Switch
        android:id="@+id/swi_uSonicID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="58dp"
        android:text="Buzzer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/batteryLevelID"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="144dp"
        android:layout_height="43dp"
        android:layout_marginStart="63dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chassisLightButton" />

    <TextView
        android:id="@+id/txt_uSonic_distanceID"
        android:layout_width="101dp"
        android:layout_height="22dp"
        android:layout_marginEnd="47dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swi_uSonicID" />

    <TextView
        android:id="@+id/Batterylevel_numID"
        android:layout_width="98dp"
        android:layout_height="29dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="32dp"
        android:text="100%"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/powerLevelTextID" />

</androidx.constraintlayout.widget.ConstraintLayout>