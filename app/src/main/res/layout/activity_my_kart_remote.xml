<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyKartRemote">

    <Button
        android:id="@+id/positionLightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="#E1E1E1E1"
        android:text="Position"
        app:layout_constraintBaseline_toBaselineOf="@+id/chassisLightButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/chassisLightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#E1E1E1E1"
        android:text="ChÃ¢ssis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/positionLightButton" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="10dp"
        android:text="Feux"
        app:layout_constraintBottom_toTopOf="@+id/positionLightButton"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/directionBar"
        android:layout_width="380dp"
        android:layout_height="102dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="100dp"
        android:max="100"
        android:paddingHorizontal="30dp"
        android:pointerIcon="context_menu"
        android:progress="50"
        android:thumb="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.675" />

    <SeekBar
        android:id="@+id/gasBarID"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        android:progress="50"
        android:rotation="-90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.474" />

    <ImageButton
        android:id="@+id/imageButton"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_settings" />

    <TextView
        android:id="@+id/powerLevelTextID"
        android:layout_width="140dp"
        android:layout_height="36dp"
        android:layout_marginStart="400dp"
        android:layout_marginTop="120dp"
        android:text="Power:"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/chassisLightButton"
        app:layout_constraintTop_toBottomOf="@+id/gasBarID" />

</androidx.constraintlayout.widget.ConstraintLayout>